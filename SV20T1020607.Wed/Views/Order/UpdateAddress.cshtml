
@model SV20T1020607.DomainModels.Order

<h1>Cập nhật thông tin nhận hàng</h1>
<div class="box box-primary">
    <div class="box-body">
        <div class="form-group">
            @Html.ValidationMessage("Error", new { @style = "color:#f00" })
        </div>
        <form action="~/Order/SaveAddress" method="post">
            <input type="hidden" value="@Model.OrderID" name="id" />

                <div class="form-group">
                    <label class="control-label">Địa chỉ:</label>
                    <input type ="text" class="form-control" name="@nameof(Model.DeliveryAddress)" value="@Model.DeliveryAddress" />
                   
                </div>
                <div class="form-group">
                    <label class="control-label">Tỉnh thành:</label>
                    <select class="form-control" name="@nameof(Model.DeliveryProvince)">
                        <option value="">--Chọn tỉnh/thành-----</option>
                        @foreach (var item in SV20T1020067.BusinessLayers.CommonDataService.ListOfProVinces())
                        {
                            if (item.ProvinceName == Model.DeliveryProvince)
                            {
                                <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                            }
                            else
                            {
                                <option value="@item.ProvinceName">@item.ProvinceName</option>
                            }
                        }
                    </select>
                </div>

                <div class="form-group">
                    <div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i> Lưu dữ liệu
                        </button>
                        <a class="btn btn-default" href="~/Order/Details/@Model.OrderID">
                            Quay lại
                        </a>
                    </div>
                </div>

        </form>

    </div>
</div>
